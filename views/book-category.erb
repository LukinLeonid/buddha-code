<div class="category">
  <div class='header'>
    <h1> <%= @category.name %> </h1>
    <h3> <a href="/library"> &larr; В библиотеку </a> </h3>
  </div>
  <div class="menu">
    <h3> На странице: </h3>
    <% @category.group.each do |group| %>
      <div>
        <a href="<%= "##{group.name}" %>">
          <h4><%= group.name %></h4>
        </a>
      </div>
    <% end %>
  </div>
  <div class="books">
    <% @category.group.each do |group| %>
      <h2 id="<%= group.name %>" > <%= group.name %> </h2>
      <% group.book.each do |book_id| %>
        <% book = @books[book_id] %>
        <div class="book cell">
          <a href="<%= "/book/#{book_id}" %>">
            <img class="book cover"
                 src="<%= book_cover_url(book_id, :medium) %>"/>
          </a>
          <div class="book title">
            <a href="<%= "/book/#{book_id}" %>">
              <%= @books[book_id].title %>
            </a>
          </div>
          <% if not book.author.empty? %>
            <div class="book author">
              <%= book.author.join(', ') %>
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
    </hr>
  </div>
</div>
