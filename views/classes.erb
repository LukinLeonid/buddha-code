<div class="classes">
  <%= erb :'partials/time_header', locals: { selected: :schedule }  %>

  <%= erb :'partials/classes', locals:
    { title: "Текущие",
      classes: @timetable.classes.select { |c| actual_classes(c) },
      plans: @timetable.event_plan } %>
  <hr/>

  <%= erb :'partials/classes', locals:
    { title: "Будущие",
      classes: @timetable.classes.select { |c| future_classes(c) },
      plans: [] } %>
</div>
