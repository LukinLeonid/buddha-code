<div class="fotorama">
  <% options = {
    full_path: false,
    sorted: true
  } %>
  <% each_file("data#{url}#{directory}", options) do |name| %>
    <%
      if root
        href = digest_url("#{url}#{directory}/#{name}")
      else
        href = digest_url("#{directory}/#{name}", url)
      end
    %>
    <a href="<%= href %>"></a>
  <% end %>
</div>
