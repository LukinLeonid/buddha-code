<% mark_event_conflicts(events) %>
<% clazz = "events" %>
<% clazz += " #{style}" if style %>
<div class="<%= clazz %>">
  <% events.each do |event| %>
    <% clazz = "event" %>
    <% clazz += " conflict" if event[:conflict] %>
    <% clazz += " cancel" if event[:cancel] %>
    <div class="<%= clazz %>">
      <div class="time"> <%= event[:time].classes_time %> </div>
      <a href="/timetable?show=schedule#<%= slug(Russian::transliterate(event[:title])) %>">
        <%= "#{event[:title]}" %><% if event[:temp] %><sup>*</sup><% end %>
      </a>
    </div> <%# event %>
  <% end %>
</div> <%# events %>
