<div class="news">
  <div class="title">
    <%= link_if(index, "/news/#{slug}/", news.title) %>
  </div>
  <div class="date">
    <%= format_date(Date.parse(news.publish_date)) %>
  </div>
  <div class="body">
    <%= render_news(news.body, slug) %>
  </div>
  <% if news.has_more %>
    <div class="more">
      <a href="<%= "news/#{slug}/" %>"> Подробнее </a>
    </div>
  <% end %>
</div>
