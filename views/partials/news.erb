<div class="news">
  <div class="date">
    <%= Russian::strftime(news.date, "%d %B") %>
  </div>
  <div class="title">
    <%= news.title %>
  </div>
  <div class="body">
    <%= render_news(index ? news.cut : news.body, slug, news.ext) %>
  </div>
  <% if index and news.has_more %>
    <a class="site-button" href="<%= "news/#{slug}/" %>"> Подробнее </a>
  <% end %>
</div>
