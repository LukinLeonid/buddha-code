<div class="section">
  <div class="title"> <%= title %> </div>
  <% plans.each do |p| %>
  <div class="class">
    <img src="/classes/stub.jpg"/>
    <div class="description">
      <div class="title"> <%= p.title %> </div>
      <div class="days"> <%= p.days %> </div>
      <div class="info"> <%= p.info %> </div>
    </div> <%# description %>
  </div> <%# class %>
  <% end %>
  <% classes.each do |c| %>
  <div class="class">
    <img src="/classes/stub.jpg"/>
    <div class="description">
      <div class="title"> <%= c.title %> </div>
      <% if not (c.begin.nil? and c.end.nil?)%>
        <div class="dates"> <%= classes_dates(c) %> </div>
      <% end %>
      <div class="days"> <%= classes_days(c) %> </div>
      <div class="info"> <%= c.info %> </div>
    </div> <%# description %>
  </div> <%# class %>
  <% end %>
</div>
