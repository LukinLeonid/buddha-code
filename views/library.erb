<div class="library">
  <div class="page-header-buddha">
    <div class="title"> Библиотека </div>
  </div>

  <div class="recent">
    <% @books.each do |id, book| %>
      <%= book_thumb(id, book) %>
    <% end %>
  </div>

  <% @library.section.each do |section| %>
    <div class="section">
      <h2> <%= section.name %> </h2>
        <% section.category.each do |category| %>
          <div> <h3> <%= category_link(@categories, category) %> </h3> </div>
        <% end %>
    </div>
  <% end %>
</div>
