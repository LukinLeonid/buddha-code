<div class="library">
  <h1 class="title"> Библиотека </h1>
  <% @library.section.each do |section| %>
    <div class="section">
      <h2 class="section"> <%= section.name %> </h2>
        <% section.category.each do |category| %>
          <div class="category">
            <a href="<%= "/book-category/#{category}" %>">
              <% puts category %>
              <%= @categories[category].name %>
            </a>
          </div>
        <% end %>
    </div>
  <% end %>
</div>
